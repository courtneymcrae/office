<%= form_for([@room, @reservation]) do |f| %>
<%= f.text_field :start_date, placeholder: 'mm/dd/yyyy', :data => {:provide => 'datepicker'} %>
<%= f.text_field :end_date, placeholder: 'mm/dd/yyyy', :data => {:provide => 'datepicker'} %>
<%= f.hidden_field :room_id, value: @room.id %>
<%= f.hidden_field :price, value: @room.price %>

<br>
<%= f.submit "Book Now", class: "btn btn-primary"%>
<% end %>

